﻿
@namespace WEB_253504_VILKINA.BLAZORWASM.Components
@inject IDataService DataService
@using WEB_253504_VILKINA.DOMAIN.Entities

<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown"
            aria-expanded="false">
        @if (DataService.SelectedCategory != null)
        {
            @DataService.SelectedCategory.NormalizedName
        }
        else
        {
            <text>ALL</text>
        }
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
        <li>
            <button class="dropdown-item" @onclick="() => SelectCategory(null)">
                ALL
            </button>
        </li>
        @foreach (var category in DataService.Categories)
        {
            <li>
                <button class="dropdown-item" @onclick="() => SelectCategory(category)">
                    @category.NormalizedName
                </button>
            </li>
        }
    </ul>
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        DataService.SelectedCategory = null;
        await DataService.GetCategoryListAsync();
        await DataService.GetProductListAsync();
    }

    async Task SelectCategory(Category? category)
    {
        DataService.SelectedCategory = category;
        DataService.CurrentPage = 1;
        await DataService.GetProductListAsync();
    }

}